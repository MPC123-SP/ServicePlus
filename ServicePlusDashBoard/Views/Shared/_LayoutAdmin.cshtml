                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ReceivedJson">
                                @* <i class="fa-solid fa-file"></i>*@
                                <i class="fa-solid fa-file-code"></i>
                                ReceivedJson
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ConsolidatePendency">
                                
                                <i class="fa-solid fa-file-shield fa-bounce"></i>
                                ConsolidatePendencyReport
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ConsolidateReport">

                                <i class="fa-solid fa-file-shield fa-bounce"></i>
                                ConsolidateReport
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("CreateUser", "Account")" class="nav-link" role="button">
                                <i class="bi-person me-2 fa-lg"></i> Create User
                            </a>

                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("CreateRole", "Account")" class="nav-link" role="button">
                                <i class="fa-solid fa-person fa-bounce fa-lg"></i> Create Role
                            </a>

                        </li>
                        <a href="@Url.Action("GetUser", "Account")" class="nav-link" role="button">
                            <i class="fa-solid fa-users fa-bounce fa-lg"></i> Users
                        </a>

                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("AddApiDescription", "Account")" class="nav-link" role="button">
                                <i class="fa-solid fa-dice-one fa-lg"></i> Add API Description
                            </a>

                        </li>  
                        <li class="nav-item">
                     
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/UpdateReports">
                                <i class="fa-solid fa-arrows-rotate fa-spin fa-lg"></i>
                                Update Reports
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" href="/Admin /Setting">
                                <i class="bi-gear me-2 fa-lg"></i>
                                Settings
                            </a>
                        </li>

                        <li class="nav-item border-top mt-auto pt-2">
                            <a class="nav-link active" href="/Account/LogOut">
                                <i class="bi-box-arrow-left me-2"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class ="container-fluid">   @RenderBody()</div>



        </div>
    </div>


    <footer class="site-footer">
